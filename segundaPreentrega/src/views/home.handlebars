<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-2">
    <div class="jumbotron">


        <div id="productos">
        {{#if listProducts.length}}
        <h2>Men√∫</h2>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
                {{#each listProducts}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>${{this.price}}</td>
                    <td><img width="100" src={{this.thumbnail}} alt="not found"></td>
                </tr>
                {{/each}}
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                <a class="page-link" {{#if hasPrevPage}} href="/api/products/home?query={{customQuery}}&page={{prevPage}}&limit={{limitValue}}&sort={{sort}}" {{/if}}>Anterior</a>
                </li>
                {{#each arr}}
                <li class="page-item"><a class="page-link" href="/api/products/home?query={{customQuery}}&page={{this}}&limit={{limitValue}}&sort={{sort}}">{{this}}</a></li>
                {{/each}}
                <li class="page-item">
                <a class="page-link" {{#if hasNextPage}} href="/api/products/home?query={{customQuery}}&page={{nextPage}}&limit={{limitValue}}&sort={{sort}}" {{/if}}>Siguiente</a> 
                </li>
            </ul>
        </nav>
        {{else}}
        <h3>No hay productos</h3>
        {{/if}}
        
    </div>
</div>



